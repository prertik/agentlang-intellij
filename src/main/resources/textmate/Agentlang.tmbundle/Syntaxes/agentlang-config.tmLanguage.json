{
  "name": "agentlang-config",
  "scopeName": "source.agentlang.config",
  "fileTypes": [
    "config.al"
  ],
  "patterns": [
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#keys"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.agentlang.config",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.agentlang.config"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.agentlang.config"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.agentlang.config"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.agentlang.config"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.agentlang.config",
          "begin": "\"",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.agentlang.config"
            }
          },
          "end": "\"",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.agentlang.config"
            }
          },
          "patterns": [
            {
              "name": "constant.character.escape.agentlang.config",
              "match": "\\\\."
            },
            {
              "name": "keyword.other.agentlang.config",
              "match": "#js\\b"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.agentlang.config",
          "match": "\\B(@as|@then|@catch|@before|@after|@async)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.agentlang.config",
          "match": "\\b-?(?:0|[1-9]\\d*)(?:\\.\\d+)?\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.agentlang.config",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "keys": {
      "patterns": [
        {
          "name": "variable.other.key.agentlang.config",
          "match": "(?<=\\{|,|\\s)([A-Za-z_][A-Za-z0-9_./-]*)(?=\\s*:)"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.agentlang.config",
          "match": "\\b[A-Za-z_][A-Za-z0-9_./-]*\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.agentlang.config",
          "match": "[\\{\\}\\[\\],:]"
        }
      ]
    }
  }
}
