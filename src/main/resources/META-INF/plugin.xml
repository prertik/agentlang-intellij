<idea-plugin>
    <id>ai.agentlang</id>
    <name>Agentlang</name>
    <vendor email="jetbrains@prertik.com" url="https://github.com/prertik/agentlang-intellij">Agentlang</vendor>

    <description><![CDATA[
        <p><a href="https://github.com/agentlang-ai/agentlang">Agentlang</a> support for IntelliJ-based IDEs.</p>
        <ul>
            <li>Syntax highlighting with the bundled TextMate grammar</li>
            <li>Language Server Protocol features (diagnostics, completion, navigation)</li>
        </ul>
        <p>Requires a <code>node</code> executable on PATH to launch the language server.</p>
        <p>Requires <code>agentlang</code> to be cloned and available for the language server to function properly.</p>
    ]]></description>
    <change-notes><![CDATA[
        <ul>
            <li>Initial release with TextMate highlighting and LSP integration.</li>
        </ul>
    ]]></change-notes>
    <category>Languages</category>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.textmate</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Agentlang" language="Agentlang" implementationClass="ai.agentlang.idea.AgentlangFileType"
                  extensions="al" fileNames="config.al"/>
        <fileTypeDetector implementation="ai.agentlang.idea.AgentlangFileTypeDetector"/>
        <textmate.bundleProvider implementation="ai.agentlang.idea.AgentlangTextMateBundleProvider"/>
        <lsp.serverSupportProvider implementation="ai.agentlang.idea.AgentlangLspServerSupportProvider"/>
    </extensions>
</idea-plugin>
